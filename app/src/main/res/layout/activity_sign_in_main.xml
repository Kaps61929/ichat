<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".signupActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#FFF8F8"
        android:gravity="center"
        android:orientation="vertical">

       

        <ImageView
            android:id="@+id/logo"
            android:layout_width="421dp"
            android:layout_height="147dp"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            app:srcCompat="@drawable/chat_app_icon" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="9dp"
            android:layout_weight="1"
            android:background="@color/textbackground"
            android:ems="10"
            android:hint=" Email"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/hintcolor"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/textbackground"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/hintcolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ClickSignIup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="9dp"
            android:paddingTop="9dp"
            android:paddingRight="3dp"
            android:paddingBottom="9dp"
            android:text="Click for Signup
"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <Button
            android:id="@+id/SignIn"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:text="Sign in"
            android:textColor="#FAF6F6"
            android:textSize="16sp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="24dp" />

        <TextView
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="-9dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="or"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/signinwith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Sign In With
"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#FFF8F8"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Google"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/google32"
                android:text="Google"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="24dp" />

            <Button
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/facebooksquare333small"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="@color/facebook_color"
                app:cornerRadius="24dp"
                 />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>